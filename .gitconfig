#
# This is the config file, and
# a '#' or ';' character indicates
# a comment
#

[user]
    user = Simon Howe
    email = footless@gmail.com

[color]
    branch = auto
    diff = auto
    status = auto
  [color "diff"]
    old = red bold
    new = green bold
  [color "status"]
    added = green bold
    changed = cyan bold
    untracked = yellow
  [color "branch"]
    remote = yellow

[alias]
  co = checkout
  ci = commit
  st = status
  br = branch
  idiff = diff --color-words

